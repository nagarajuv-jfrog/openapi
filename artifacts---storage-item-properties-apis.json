{
    "openapi": "3.0.0",
    "info": {
        "title": "Artifacts Storage - Item Properties Apis",
        "description": "Provides APIs to manage item properties within repositories, including retrieval, updating, and deletion of properties.",
        "version": "1.0.0"
    },
    "paths": {
        "/artifactory/api/storage/{repoKey}/{itemPath}": {
            "get": {
                "description": "This REST API is called to retrieve item properties. Optionally, it can return only certain requested properties.",
                "operationId": "getItemProperties",
                "parameters": [
                    {
                        "name": "repoKey",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "itemPath",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "properties",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "uri": {
                                            "type": "string"
                                        },
                                        "properties": {
                                            "type": "object",
                                            "additionalProperties": {
                                                "type": "array",
                                                "items": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    },
                                    "example": {
                                        "uri": "http://localhost:8081/artifactory/api/storage/libs-release-local/org/acme",
                                        "properties": {
                                            "p1": [
                                                "v1",
                                                "v2",
                                                "v3"
                                            ],
                                            "p2": [
                                                "v4",
                                                "v5",
                                                "v6"
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/artifactory/api/metadata/{repoKey}/{itemPath}": {
            "patch": {
                "summary": "Update Item Properties",
                "description": "Attach and modify properties to an item: file, folder, or repository. Property attachment is recursive by default. Supported by local and local-cached repositories.",
                "operationId": "updateItemProperties",
                "parameters": [
                    {
                        "name": "repoKey",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "itemPath",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "recursiveProperties",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "default": 0
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "props": {
                                        "type": "object",
                                        "additionalProperties": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "example": {
                                    "props": {
                                        "newKey": "newValue",
                                        "existingKey": "modifiedValue",
                                        "toBeRemovedKey": null
                                    }
                                }
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Properties updated successfully"
                    }
                },
                "security": [
                    {
                        "privilegedUser": []
                    }
                ]
            }
        },
        "/artifactory/api/storage/{repoKey}{itemPath}": {
            "delete": {
                "description": "Deletes the specified properties from an item (file, folder, or repository). When a folder is used property removal is recursive by default. Supported by local and local-cached repositories. Requires Artifactory Pro",
                "security": [
                    {
                        "basicAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "repoKey",
                        "in": "path",
                        "required": true,
                        "description": "Repository key",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "itemPath",
                        "in": "path",
                        "required": true,
                        "description": "Item path",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "properties",
                        "in": "query",
                        "required": true,
                        "description": "Properties to delete",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "recursive",
                        "in": "query",
                        "required": false,
                        "description": "Set to 0 to disable recursive property removal",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Item properties deleted successfully"
                    },
                    "400": {
                        "description": "Bad request"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "Item not found"
                    }
                },
                "tags": [],
                "operationId": "deleteArtifactoryApiStorageRepokeyitempath"
            }
        }
    },
    "tags": [],
    "components": {
        "securitySchemes": {
            "basicAuth": {
                "type": "http",
                "scheme": "basic",
                "description": "HTTP Basic Authentication"
            },
            "privilegedUser": {
                "type": "http",
                "scheme": "basic",
                "description": "Privileged user authentication"
            }
        }
    }
}